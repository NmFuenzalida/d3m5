<%= form_with model: @movie, method: :post do |form| %>
<div class="col-4">
<div>
<%= form.label :name, "Post Title", class: "form-label" %>
<%= form.text_field :name, class: "form-control" %>
</div>
<div>
<%= form.label :synopsis, "Sinopsis de la pelicula", class: "form-label"
%>
<%= form.text_field :synopsis, class: "form-control" %>
</div>
<div>
<%= form.label :director, "Director", class: "form-label"
%>
<%= form.text_field :director, class: "form-control" %>
</div>
<div>
<%= form.submit "Submit", class: "btn btn-primary" %>
</div>
</div>
<% end %>
